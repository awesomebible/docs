---
import { Image } from 'astro:assets';
import Heart from '../../assets/heart.svg'
import Starlight from '../../assets/badges/starlight.svg';
import Netlify from '../../assets/badges/netlify-color-accent.svg';

const { title } = Astro.props;
---
<article class="sl-flex not-content credits" aria-labelledby="about-astro-heading">
	<h2>
		{title}
    </h2>
	<a href="https://starlight.astro.build">
		<Image src={Starlight} alt="Built with Astro" width="240" height="40">
	  </a>
	  <small>&</small>
	<a href="https://www.netlify.com">
		<Image src={Netlify} alt="Deploys by Netlify" />
	</a>
</article>

<style>
	.credits {
		margin: 0 auto;
		padding: 4rem 0;
		text-align: center;
	}

	.credits h2 {
		font-size: var(--sl-text-2xl) !important;
		font-weight: 400;
	}
	article {
		max-width: 40rem;
		margin-inline: auto;
		padding-block: 5rem;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: 0.5rem;
	}
	article > :global(*) {
		max-width: 50ch;
	}
	svg {
		width: 15rem;
	}
</style>